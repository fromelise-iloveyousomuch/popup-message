<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>A message for you</title>

<style>
body {
  margin: 0;
  background-color: #0f0f0f;
  font-family: Arial, sans-serif;
}

/* POPUP BOX */
.popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #ffffff;
  padding: 22px 26px;
  border-radius: 16px;
  width: 320px;
  box-shadow: 0 0 30px rgba(255, 105, 180, 0.55);
  text-align: center;
  animation: fadeIn 0.6s ease;
}

.popup h2 {
  font-size: 15px;
  font-weight: normal;
  margin-bottom: 16px;
  color: #000;
}

.ok-btn {
  background: #ff69b4;
  border: none;
  padding: 8px 26px;
  border-radius: 22px;
  color: white;
  font-size: 14px;
  cursor: pointer;
}

.ok-btn:hover {
  background: #ff85c1;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translate(-50%, -55%); }
  to { opacity: 1; transform: translate(-50%, -50%); }
}
</style>
</head>

<body>

<!-- MUSIC -->
<audio id="music" loop>
  <source src="music.mp3" type="audio/mpeg">
</audio>

<!-- POPUP -->
<div class="popup">
  <h2>Hello, mister Wook.</h2>
  <button class="ok-btn" onclick="nextMessage()">OK</button>
</div>

<script>
const messages = [
  "Hello, mister Wook.",
  "This is Santa, and someone told me you have been both good... and naughty.",
  "Is that true?",
  "She wants to tell you a secret.",
  "You own her heart.",
  "And she wants you to know you are making her life complete.",
  "I love you, dearly, and endlessly.",
  "Your one and only, Elis√®."
  "And... I hope you don't mind the pink theme. It is my first time coding"
];

let index = 0;
const popupText = document.querySelector(".popup h2");
const music = document.getElementById("music");

function nextMessage() {
  if (music.paused) {
    music.play();
  }

  index++;
  if (index < messages.length) {
    popupText.textContent = messages[index];
  } else {
    document.querySelector(".popup").style.display = "none";
  }
}
</script>

</body>
</html>
